<h1>Banners</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>
        #
      </th>
      <th>
        Start Date
      </th>
      <th>
        End Date
      </th>
      <th>
        User
      </th>
      <th>
        location
      </th>
      <th>
        Headline
      </th>
    </tr>
  </thead>
  <tbody>
    <% @banners.each do |banner| %>
     <tr>
       <td>
         <%= banner.id %>
       </td>
       <td>
         <%= banner.start_date %>
       </td>
       <td>
         <%= banner.end_date %>
       </td>
       <td>
         <%= banner.user.last_name %>
       </td>
       <td>
         <%= banner.location %>
       </td>
       <td>
         <%= truncate(banner.headline) %>
       </td>
     </tr>
    <% end %>
  </tbody>
</table>